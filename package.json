{
  "name": "gefri",
  "version": "0.0.1",
  "description": "A JavaScript graphical editing framework",
  "main": "index.js",
  "config" : {
    "loglevel" : "warn"
  },
  "scripts": {
    "postinstall": "typings install dt~jasmine --save --global && mkdir -p dist",
    "test": "ts-node jasmine",
    "coverage": "ts-node node_modules/istanbul/lib/cli.js cover ./jasmine.js",
    "build-js-min": "browserify src/gefri.ns.ts -p [tsify] --standalone gefri | uglifyjs -c > dist/gefri.min.js",
    "build-js": "browserify src/gefri.ns.ts -p [tsify] -v --debug -o --standalone gefri > dist/gefri.js && cat dist/gefri.js > public/demo/gefri.js",
    "watch-ts": "chokidar 'src/**/!(*spec).ts' -c 'npm run coverage && npm run build-js && npm run build-js-min && echo \"Done.\"'",
    "watch-specs": "chokidar 'src/**/*.spec.ts' -c 'npm run coverage'",
    "watch": "npm run watch-ts & npm run watch-specs",
    "serve": "npm run build-js && http-server public/",
    "serve-watch": "npm run serve & npm run watch",
    "dev": "npm run serve-watch --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Izhaki/gefri.git"
  },
  "author": "Izhaki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Izhaki/gefri/issues"
  },
  "homepage": "https://github.com/Izhaki/gefri#readme",
  "devDependencies": {
    "browserify": "^13.0.1",
    "chokidar-cli": "^1.2.0",
    "http-server": "^0.9.0",
    "istanbul": "^1.1.0-alpha.1",
    "jasmine": "^2.4.1",
    "jsdom": "^9.4.1",
    "ts-node": "^0.9.3",
    "tsify": "^0.16.0",
    "typescript": "^1.8.10",
    "typings": "^1.3.1",
    "uglify-js": "^2.7.0"
  }
}
