{
  "name": "gefri",
  "version": "0.0.1",
  "description": "A JavaScript graphical editing framework",
  "main": "index.js",
  "config": {
    "loglevel": "warn"
  },
  "scripts": {
    "postinstall": "typings install && npm run build-vendor",
    "build-vendor": "npm-run-all build-vendor:*",
    "build-vendor:js": "cat node_modules/material-design-lite/material.min.js node_modules/jquery/dist/jquery.slim.min.js node_modules/rxjs/bundles/Rx.js > demo/vendor.js",
    "build-vendor:css": "cat node_modules/material-design-lite/material.min.css > demo/vendor.css",
    "test": "ts-node ./tests/unit/jasmine.js",
    "features": "./echolor.sh --hex 1abc9c 'Running behaviour tests...' && ts-node node_modules/.bin/cucumber.js --tags ~@ignore --format progress tests/features",
    "coverage": "./echolor.sh --hex 1abc9c 'Running unit tests...' && ts-node node_modules/istanbul/lib/cli.js cover --config=./tests/istanbul.yml ./tests/unit/jasmine.js",
    "build-js-min": "./echolor.sh --hex 1abc9c 'Building gefri.min.js...' && browserify src/gefri.ns.ts -p [tsify] --standalone gefri | uglifyjs -c warnings=false > dist/gefri.min.js",
    "build-js": "./echolor.sh --hex 1abc9c 'Building gefri.js...' && browserify src/gefri.ns.ts -p [tsify] -v --debug -o --standalone gefri > demo/gefri.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:ts": "chokidar -p --poll-interval 999 'src/**/!(*spec).ts' -c 'npm run on-ts-change'",
    "on-ts-change": "npm-run-all coverage build-js features done",
    "watch:specs": "chokidar -p --poll-interval 999 'src/**/*.spec.ts' -c 'npm run on-specs-change'",
    "on-specs-change": "npm-run-all coverage done",
    "watch:features": "chokidar -p --poll-interval 999 'tests/features/**/*.*' -c 'npm run on-features-change'",
    "on-features-change": "npm-run-all build-js features done",
    "serve": "npm run build-js && http-server demo/",
    "serve-watch": "npm-run-all --parallel serve watch",
    "dev": "npm run serve-watch --silent",
    "done": "figlet -f 'Dancing Font' 'Done'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Izhaki/gefri.git"
  },
  "author": "Izhaki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Izhaki/gefri/issues"
  },
  "homepage": "https://github.com/Izhaki/gefri#readme",
  "devDependencies": {
    "@angular/core": "^2.0.1",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "chai-subset": "^1.3.0",
    "chokidar-cli": "^1.2.0",
    "cucumber": "^1.2.2",
    "figlet-cli": "^0.1.0",
    "http-server": "^0.9.0",
    "istanbul": "^1.1.0-alpha.1",
    "jasmine": "^2.4.1",
    "jasmine-fail-fast": "^2.0.0",
    "jsdom": "^9.4.1",
    "npm-run-all": "^3.1.0",
    "rxjs": "^5.0.0-beta.12",
    "ts-node": "^1.4.3",
    "tsify": "^0.16.0",
    "typescript": "^2.0.3",
    "typings": "^1.3.1",
    "uglify-js": "^2.7.0",
    "zone.js": "^0.6.25"
  },
  "dependencies": {
    "jquery": "^3.1.0",
    "material-design-lite": "^1.2.1"
  }
}
